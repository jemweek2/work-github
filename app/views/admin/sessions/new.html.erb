
<div class="form-signin mt-5">

<h3 class="form-signin-heading">Welcome Back! Please Sign In</h3>
<hr class="colorgraph">
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.email_field :email, class:"form-control", :placeholder => "Enter your email", autofocus: true, autocomplete: "email" %>

    <%= f.password_field :password, class:"form-control", :placeholder => "Enter your password", autocomplete: "current-password" %>


  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Login", class: "mt-2 btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
</div>

