<div class="container">
  <div class="row mt-4 mx-2">
    <h3 class="bg-secondary"><%= @customer.family_name %><%= @customer.first_name %>さんの会員詳細</h3>
  </div>
  <div class="row mt-4 mx-2">
    <div class="col">
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.family_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.family_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code%></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address%></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number%></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email%></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% unless @customer.is_deleted %>
            <p class="text-success">有効</p>
              <% else %>
               <p class="text-meted">退会</p>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to '編集する', edit_admin_customer_path, class: "btn btn-success" %>
          <%= link_to '注文履歴一覧を見る', admin_customers_path, class: "btn btn-primary" %></td>
        </tr>
      </table>
    </div>

  </div>
 </div>
</div>
