<div class="container">
<div class="row mt-4 ml-4">

<h3 class="col text-left">商品一覧</h3>
<div class="col text-right">
   <%= link_to "商品新規登録", new_admin_product_path, class: "btn btn-primary" %>
</div>

</div>
<div class="row mt-2 mx-5">
<table class="table", align="center",border="1" cellpadding="6" cellspacing="0">
  <thead style="background:skyblue">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @product.each do |product| %>
    <tr>
      <th><%= product.id %></th>
      <td><%= link_to product.name, admin_product_path(product) %></td>
      <td><%= product.no_tax_price.to_s(:delimited) %></td>
      <td><%= product.genre.name %></td>
      <td><% unless product.is_active %><p class="text-muted">販売停止中</p>
          <% else %><p class="text-success">販売中</p>
          <% end %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="row">
<%= paginate @product %>
</div>
</div>
