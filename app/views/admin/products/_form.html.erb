<%= form_with model:[:admin,product],local:true do |f| %>

  <div class="form-group">
    <%= f.label :"商品画像" %>
    <%= f.file_field :product_image, class: "form-control-file product_image" %>
  </div>
  <div class="form-group">
    <%= f.label :"商品名" %>
    <%= f.text_field :name, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :"商品説明" %>
    <%= f.text_area :description, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.label :"ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい", class:'form-control genre_id' %>
  </div>
  <div class="form-group">
    <%= f.label :"税抜価格" %>
    <%= f.text_field :no_tax_price, class: "form-control no_tax_price" %>円
  </div>
  <div class="form-group">
    <%= f.label :"販売ステータス" %>
    <%= f.radio_button :is_active, true%>
    <%= f.label :"販売中" %>

    <%= f.radio_button :is_active, false%>
    <%= f.label :"販売停止中" %>
  </div>

  <div class="row">
    <%= f.submit class: 'btn btn-lg btn-success mx-auto' %>
  </div>
<% end %>