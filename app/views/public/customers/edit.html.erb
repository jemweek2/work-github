

<main>
  <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
         <h2>会員情報編集</h2>

         <%= form_with model:@customer, url:customers_update_path do |f| %>

            <div class="form-group">
              <label for="inputName">氏名
                <%= f.text_field :family_name, autofocus: true, id:"inputName"%>
                <%= f.text_field :first_name, autofocus: true, id:"inputName"%>
            </div>

            <div class="form-group">
              <label for="inputName">フリガナ</label>
                <%= f.text_field :family_name_kana, autofocus: true, id:"inputName"%>
                <%= f.text_field :first_name_kana, autofocus: true, id:"inputName"%>
            </div>

            <div class="form-group">
              <label for="inputName">郵便番号</label>
                <%= f.text_field :postal_code, autofocus: true, id:"inputName"%>
            </div>
            <div class="form-group">
              <label for="inputName">アドレス</label>
                <%= f.text_field :address, autofocus: true, id:"inputName"%>
            </div>

            <div class="form-group">
              <label for="inputName">電話番号</label>
                <%= f.text_field :phone_number, autofocus: true, id:"inputName"%>
            </div>

            <div class="form-group">
              <label for="inputName">メールアドレス</label>
                <%= f.text_field :email, autofocus: true, id:"inputName"%>
            </div>

            <div class="form-group">
              <%= f.submit "編集内容を保存", class: "btn btn-primary"%>
            </div>
            <div class="form-group">
               <%= link_to '退会する', confirm_path, class: "btn btn-danger" %>
            </div>
        </div>
      　　<% end %>


      </div>


      </div>
</main>