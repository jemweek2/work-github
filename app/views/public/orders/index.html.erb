<div class="container">

    <h1><b>配送先登録/一覧</b></h1>

<div class="container">
  <div class="row">
  <div class="col">

      <table class="table table-hover">
        <thead class="thead-light">
        <tr>
          <th scope="col">注文日</th>
          <th scope="col">配送先</th>
          <th scope="col">注文商品</th>
          <th scope="col">支払金額</th>
          <th scope="col">ステータス</th>
          <th scope="col">注文詳細</th>
        </tr>
        </thead>

        <tbody>
          <% @orderes.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.postal_code %></td>
            <td><%= order.address %></td>
            <td><%= order.recipient_name %></td>
            <td><%= link_to '編集する', edit_address_path(order.id), class: "btn btn-success" %>
            <%= link_to '削除する', address_path(order.id), method: :delete, class: "btn btn-danger" %>
            </td>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>

    t.integer "postal_code", null: false
    t.string "shipping_address", null: false
    t.string "shipping_name", null: false
    t.integer "postage", null: false
    t.integer "total_price", null: false
    t.integer "payment_method", default: 0, null: false
    t.integer "order_status", default: 0, null: false
    t.integer "cutomer_id", null: false
    t.datetime "created_at", precision: 6, null: false
    t.datetime "updated_at", precision: 6, null: false