
<main>
  <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
         <h2>会員情報編集</h2>

         <%= form_with model:@shipping_adress, url:address_path(@shipping_adress.id) do |f| %>

            <div class="form-group">
              <label for="inputName">郵便番号(ハイフンなし)
                <%= f.text_field :postal_code, autofocus: true, id:"inputName"%>
            </div>

            <div class="form-group">
              <label for="inputName">住所</label>
                <%= f.text_field :address, autofocus: true, id:"inputName"%>
            </div>

            <div class="form-group">
              <label for="inputName">宛名</label>
                <%= f.text_field :recipient_name, autofocus: true, id:"inputName"%>
            </div>

            <div class="form-group">
              <%= f.submit "編集内容を保存", class: "btn btn-primary"%>
            </div>
        <% end %>

        </div>



      </div>


      </div>
</main>