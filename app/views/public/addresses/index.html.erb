<div class="container">

    <h1><b>配送先登録/一覧</b></h1>

    <br>
    <br>
    <br>

    <%= form_with model:@shipping_adress, url:addresses_path, local:true do |f| %>

      <div class="form-group">
        <%= f.label :郵便番号 %>
        <%= f.text_area :postal_code, class: 'form-control book_body' %>
      </div>

      <div class="form-group">
        <%= f.label :住所 %>
        <%= f.text_field :address, class: 'form-control book_title' %>
      </div>

      <div class="form-group">
        <%= f.label :宛名 %>
        <%= f.text_area :recipient_name, class: 'form-control book_body' %>
      </div>

      <div class="form-group">
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
    <% end %>
</div>

<div class="container">
  <div class="row">
  <div class="col">

      <table class="table table-hover">
        <thead class="thead-light">
        <tr>
          <th scope="col">郵便番号</th>
          <th scope="col">住所</th>
          <th scope="col">宛名</th>
          <th scope="col"> </th>
        </tr>
        </thead>

        <tbody>
          <% @shipping_adresses.each do |shipping_adress| %>
          <tr>
            <td><%= shipping_adress.postal_code %></td>
            <td><%= shipping_adress.address %></td>
            <td><%= shipping_adress.recipient_name %></td>
            <td><%= link_to '編集する', edit_address_path(shipping_adress.id), class: "btn btn-success" %>
            <%= link_to '削除する', address_path(shipping_adress.id), method: :delete, class: "btn btn-danger" %>
            </td>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>








